{
  "ConnectionStrings": {
    "DefaultConnection": "Server=localhost;Database=TranslationProviderDb;Integrated Security=true;TrustServerCertificate=true;",
    "CommandDb_ConnectionString": "Server=localhost;Database=TranslationProviderDb;Integrated Security=true;TrustServerCertificate=true;",
    "QueryDb_ConnectionString": "Server=localhost;Database=TranslationProviderDb;Integrated Security=true;TrustServerCertificate=true;"
  },
  "ApplicationName": "Translation Provider",
  "ServiceId": "translation-provider",
  "ServiceName": "Translation Provider Service", 
  "ServiceVersion": "1.0.0",
  "Serilog": {
    "MinimumLevel": {
      "Default": "Warning",
      "Override": {
        "TranslationProvider": "Information",
        "Microsoft": "Warning",
        "Microsoft.Hosting.Lifetime": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "outputTemplate": "[{Timestamp:HH:mm:ss} {Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      },
      {
        "Name": "File",
        "Args": {
          "path": "logs/translation-provider-.log",
          "rollingInterval": "Day",
          "retainedFileCountLimit": 30,
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level:u3}] {Message:lj} {Properties:j}{NewLine}{Exception}"
        }
      }
    ]
  },
  "Caching": {
    "DefaultTtlMinutes": 60,
    "TranslationTtlMinutes": 30,
    "CultureTtlMinutes": 120
  },
  "RateLimit": {
    "ReadRequestsPerHour": 1000,
    "WriteRequestsPerHour": 100
  },
  "AllowedHosts": "*",
  "Cors": {
    "AllowedOrigins": [
      "https://yourdomain.com",
      "https://app.yourdomain.com"
    ]
  }
}